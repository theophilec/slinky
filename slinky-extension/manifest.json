{
  "manifest_version": 3,
  "name": "Slinky Extension",
  "version": "1.0",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "permissions": ["activeTab", "scripting"],
  "web_accessible_resources": [
    {
      "resources": ["pkg/slinky.js", "pkg/slinky_bg.wasm", "pkg/package.json"],
      "matches": ["<all_urls>"]
    }
  ]
}
